<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/poduct_name_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meal_name"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:textStyle="normal"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp">
    </TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="72dp"
            android:layout_height="37dp"
            app:cardBackgroundColor="@color/colorLightGray">

            <TextView
                android:id="@+id/item_price_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingStart="14dp"
                android:textColor="@color/colorBlack"
                android:text="@string/items_price"
                tools:ignore="RtlSymmetry"
                android:paddingLeft="14dp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/decrease_menu_sub"
            android:layout_width="44dp"
            android:layout_height="37dp"
            app:cardBackgroundColor="@color/colorBusy">

            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25sp"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="18dp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="37dp"
            app:cardBackgroundColor="@color/colorLightGray">

            <TextView
                android:id="@+id/counter_menu_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="17dp"
                android:paddingTop="9dp"
                android:text="0"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlSymmetry"
                android:paddingLeft="17dp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/increase_menu_sub"
            android:layout_width="44dp"
            android:layout_height="37dp"
            app:cardBackgroundColor="@color/colorBusy">

            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="25sp"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="16dp" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="80dp">
            <ImageView
                android:id="@+id/to_basket_cv_sub"
                android:layout_width="44dp"
                android:layout_height="37dp"
                android:src="@drawable/ic_check_mark"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/to_basket_cv2_sub"
                android:layout_width="37dp"
                android:layout_height="34dp"
                android:layout_alignStart="@+id/to_basket_cv_sub"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/done_ic"
                android:visibility="gone"
                android:layout_alignLeft="@+id/to_basket_cv_sub"
                android:layout_marginLeft="7dp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>